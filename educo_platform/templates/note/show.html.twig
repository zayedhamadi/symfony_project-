{% extends 'side-bar.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Note</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ note.id }}</td>
                </tr>
                <tr>
                    <th>Score</th>
                    <td>{{ note.score }}</td>
                </tr>
                <tr>
                    <th>Nom & prénom de l'élève</th>
                    <td>{{ note.eleve.prenom ~ ' ' ~ note.eleve.nom }}</td>
                </tr>
                <tr>
                    <th>Quiz</th>
                    <td>{{ note.quiz.titre }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('note_edit', {'id': note.id}) }}" class="btn btn-primary">Modifier</a>
            
            <form method="post" action="{{ path('note_delete', {'id': note.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette note ?');" class="d-inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </div>

        <a href="{{ path('note_index') }}" class="btn btn-secondary mt-3">
            Retour à la liste
        </a>
    </div>
{% endblock %}
