{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <br><br><br>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3 d-flex flex-column align-items-center text-center p-3">
                <div class="d-flex justify-content-center">
                    {% if user.image %}
                        <img src="http://localhost/uploads/{{  user.image }}"
                             class="rounded-circle border border-primary shadow-lg" width="150px" alt="Profile Image"
                             style="transition: all 0.3s ease;">
                    {% else %}
                        <img src="{{ asset('images/default-avatar.png') }}"
                             class="rounded-circle border border-secondary shadow-lg" width="150px"
                             alt="Default Profile" style="transition: all 0.3s ease;">
                    {% endif %}
                </div>

                <div class="mt-3 text-left">
                    <p class="text-muted fw-bold">Role:</p>
                    <p class="text-muted">{{ user.roles[0] ?? 'No roles assigned' }}</p>
                    <p class="text-muted fw-bold">Description:</p>
                    <p class="text-muted">{{ user.description ?? 'No description available' }}</p>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h4 class="card-title mb-4" style="color: #333; font-weight: 600; font-size: 1.8rem;">Profile</h4>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="fw-bold text-secondary">Nom</label>
                                <p>{{ user.nom }}</p>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold text-secondary">Pr√©nom</label>
                                <p>{{ user.prenom }}</p>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold text-secondary">Email</label>
                                <p>{{ user.email }}</p>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold text-secondary">Adresse</label>
                                <p>{{ user.adresse ?? 'No address provided' }}</p>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold text-secondary">Mobile</label>
                                <p>{{ user.numTel }}</p>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold text-secondary">Genre</label>
                                <p>{{ user.genre ? user.genre.name : 'Not specified' }}</p>
                            </div>
                            <div class="col-md-12">
                                <label class="fw-bold text-secondary">Date de Naissance</label>
                                <p>{{ user.dateNaissance ? user.dateNaissance|date('d-m-Y') : 'Not specified' }}</p>
                            </div>
                        </div>

                        <div class="mt-4 text-center">
                            <a href="{{ path('app_user_editt', {'id': user.id}) }}"
                               class="btn btn-outline-info w-100 mb-3" style="border-radius: 30px; font-weight: bold;">
                                <i class="fas fa-edit"></i> Edit Profile
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
