{% extends 'side-bar-parentvf.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Mon Panier</h1>

    {% if items is empty %}
        <p class="text-center">Votre panier est vide.</p>
    {% else %}
        <table class="table">
            <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td><img src="{{ asset('uploads/' ~ item.produit.image) }}" width="50"></td>
                    <td>{{ item.produit.nom }}</td>
                    <td>
                        <!-- Formulaire pour modifier la quantité -->
                        <form action="{{ path('app_panier_update_quantite', {'id': item.produit.id}) }}" method="post" class="d-inline">
                            <input type="number" name="quantite" value="{{ item.quantite }}" min="1" class="form-control form-control-sm" style="width: 60px;">
                            <button type="submit" class="btn btn-success btn-sm mt-2">Mettre à jour</button>
                        </form>
                    </td>
                    <td>{{ item.produit.prix }} dt</td>
                    <td>{{ item.produit.prix * item.quantite }} dt</td>
                    <td>
                        <!-- Formulaire pour supprimer l'article -->
                        <form action="{{ path('app_panier_remove', {'id': item.produit.id}) }}" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h4 class="text-right">Total : {{ total }} dt</h4>

        <form action="{{ path('app_panier_clear') }}" method="post">
            <button type="submit" class="btn btn-warning">Vider le panier</button>
        </form>

        <!-- Bouton pour passer à la caisse -->
        <div class="text-center mt-4">

        </div>
    {% endif %}
    {% if items is not empty %}
        <div class="text-center mt-4">
            <a href="{{ path('app_commande_paiement') }}" class="btn btn-success">Commander</a>
        </div>
    {% endif %}

    <!-- Retour à la boutique -->
    <div class="text-center mt-4">
        <a href="{{ path('app_boutique') }}" class="btn btn-primary">Retour à la Boutique</a>
    </div>
{% endblock %}
