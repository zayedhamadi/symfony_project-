{% extends 'side-bar.html.twig' %}

{% block title %}Liste des Notes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Notes</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Score</th>
                    <th scope="col">Élève</th>
                    <th scope="col">Quiz</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <th scope="row">{{ note.id }}</th>
                    <td>{{ note.score }}</td>
                    <td>
                        {% if note.eleve %}
                            {{ note.eleve.nom }} {{ note.eleve.prenom }}
                        {% else %}
                            Non assigné
                        {% endif %}
                    </td>
                    <td>
                        {% if note.quiz %}
                            {{ note.quiz.titre }}
                        {% else %}
                            Non assigné
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('note_show', {'id': note.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('note_edit', {'id': note.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune note trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('note_new') }}" class="btn btn-success">Créer une nouvelle note</a>
    </div>
</div>
{% endblock %}