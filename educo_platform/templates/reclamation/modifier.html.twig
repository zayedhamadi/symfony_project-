{% extends 'side-bar.html.twig' %}

{% block title %}Modifier le statut de la réclamation{% endblock %}

{% block body %}
<div class="container" style="margin-top: 100px !important; padding: 0 15px !important;">
    <h1 class="mb-4">Modifier le statut de la réclamation #{{ reclamation.id }}</h1>

    <p><strong>Titre:</strong> {{ reclamation.titre }}</p>
    <p><strong>Description:</strong> {{ reclamation.description }}</p>

    <h3>Modifier le statut</h3>

    {{ form_start(form) }}
        {{ form_row(form.statut) }}
        <button type="submit" class="btn btn-primary">Modifier le statut</button>
    {{ form_end(form) }}

    <a href="{{ path('reclamation') }}">Retour à la liste des réclamations</a>
</div>
{% endblock %}
