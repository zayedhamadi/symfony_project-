{% extends 'side-bar.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Quiz</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <th scope="row">{{ quiz.id }}</th>
                    <td>{{ quiz.titre }}</td>
                    <td>{{ quiz.description }}</td>
                  
                    <td>
                        <a href="{{ path('quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun quiz trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('quiz_new') }}" class="btn btn-success">Créer un nouveau quiz</a>
    </div>
</div>
{% endblock %}