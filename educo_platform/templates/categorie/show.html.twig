{% extends 'side-bar.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px !important; padding: 0 15px !important;">

        <h1 class="mb-4 text-center text-primary">Détails de la Catégorie</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <tbody>
                    <tr>
                        <th class="table-primary">Id</th>
                        <td>{{ categorie.id }}</td>
                    </tr>
                    <tr>
                        <th class="table-primary">Nom</th>
                        <td>{{ categorie.nom }}</td>
                    </tr>
                    <tr>
                        <th class="table-primary">Description</th>
                        <td>{{ categorie.description }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
