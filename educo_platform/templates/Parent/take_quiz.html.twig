{% extends 'base.html.twig' %}

{% block title %}Prendre le Quiz{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 30px !important; padding: 0 15px !important;">
        <h1>{{ quiz.titre }}</h1>

        {{ form_start(form) }}
            <div class="quiz-questions">
                {% for question in quiz.questions %}
                    <div class="question-card">
                        <p class="question-text">{{ question.texte }}</p>
                        <div class="question-options">
                            {{ form_widget(form['question_' ~ question.id], {
                                'attr': {'class': 'radio-options'}
                            }) }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="submit">
                <button type="submit" class="submit-button">{{ form.submit.vars.label }}</button>
            </div>
        {{ form_end(form) }}
    </div>

    <style>
        .quiz-container {
            padding: 30px;
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            font-family: 'Arial', sans-serif;
        }

        h1 {
            font-size: 2.2rem;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .quiz-questions {
            margin-bottom: 30px;
        }

        .question-card {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .question-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        .question-text {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .question-options {
            margin-left: 15px;
        }

        /* Style for radio buttons as cards */
        .radio-options {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .radio-options li {
            flex: 1 1 calc(50% - 15px); /* Two cards per row */
            margin-bottom: 15px;
        }

        .radio-options label {
            display: block;
            padding: 20px;
            background-color: #fff;
            border: 2px solid #007bff;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s, transform 0.2s;
            text-align: center;
            font-size: 1.1rem;
            color: #555;
        }

        .radio-options label:hover {
            background-color: #f0f8ff;
            border-color: #0056b3;
            transform: translateY(-3px);
        }

        .radio-options input[type="radio"] {
            opacity: 0;
            position: absolute;
        }

        .radio-options input[type="radio"]:checked + label {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
        }

        .submit {
            text-align: center;
            margin-top: 30px;
        }

        .submit-button {
            padding: 12px 30px;
            font-size: 1.1rem;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .submit-button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        /* Add a subtle animation to the quiz container */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .quiz-container {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
{% endblock %}