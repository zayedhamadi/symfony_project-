{% extends 'side-bar.html.twig' %}

{% block title %}Détails de l'Élève{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de l'Élève</h1>

    <div class="card p-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ eleve.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ eleve.Nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ eleve.Prenom }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de Naissance</th>
                    <td>{{ eleve.DateDeNaissance ? eleve.DateDeNaissance|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                <th scope="row">Classe</th>
                     <td>{{ eleve.IdClasse ? eleve.IdClasse.nomClasse : 'Non attribuée' }}</td>
                </tr>
                <tr>
                    <th scope="row">Moyenne</th>
                    <td>{{ eleve.moyenne }}</td>
                </tr>
                <tr>
                    <th scope="row">Nombre d'Absences</th>
                    <td>{{ eleve.NbreAbscence }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_eleve_index') }}" class="btn btn-secondary d-inline-block">Retour à la liste</a>

            <div class="d-inline-block">
                {{ include('eleve/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}