{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4 text-center" style="max-width: 500px; margin: auto; border-radius: 15px;">
            {% if user.image %}
                <img src="{{ asset('uploads/' ~ user.image) }}" alt="Profile Image" class="rounded-circle" width="120">
            {% else %}
                <img src="{{ asset('images/default-profile.png') }}" alt="Default Profile" class="rounded-circle" width="120">
            {% endif %}

            <h2 class="mt-3">{{ user.nom }} {{ user.prenom }}</h2>
            <p class="text-muted">{{ user.roles[0] ?? 'No roles assigned' }}</p>

            <div class="mt-3">
                <p><strong>Email:</strong> {{ user.email }}</p>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary w-100 me-2">Edit Profile</a>
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary w-100">Back</a>
            </div>
        </div>
    </div>
{% endblock %}
