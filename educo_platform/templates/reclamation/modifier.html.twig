{% extends 'side-bar.html.twig' %}

{% block title %}Modifier le statut de la réclamation{% endblock %}

{% block body %}
<div class="container" style="margin-top: 100px !important; padding: 0 15px !important;">
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Modifier le statut de la réclamation #{{ reclamation.id }}</h1>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <p class="mb-2"><strong>Titre:</strong> {{ reclamation.titre }}</p>
                <p class="mb-0"><strong>Description:</strong> {{ reclamation.description }}</p>
            </div>

            <h3 class="h5 mb-3">Modifier le statut</h3>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="form-group mb-3">
                    {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        Veuillez sélectionner un statut.
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Modifier le statut</button>
            {{ form_end(form) }}

            <div class="mt-4">
                <a href="{{ path('reclamation') }}" class="btn btn-outline-secondary">Retour à la liste des réclamations</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}