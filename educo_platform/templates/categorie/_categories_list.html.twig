
<table class="table table-striped">
    <thead class="table-dark">
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for categorie in categories %}
        <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.nom }}</td>
            <td>{{ categorie.description }}</td>
            <td>
                <span style="display: flex; gap: 10px;">
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm" title="Voir">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </span>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucune catégorie trouvée.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
