{% extends 'side-bar-ensg.html.twig' %}

{% block title %} Edit Course {% endblock %}

{% block body %}
<div style="margin-top: 100px; margin-left: 0;">

<div class="container mt-4">
        <h1 class="mb-4">Edit Course</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="mb-3">
            {{ form_label(form.name, 'Course Name') }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            <div class="invalid-feedback d-block text-danger ">
                {{ form_errors(form.name) }} {# Display validation errors #}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.IdMatiere, 'Select Matiere') }}
            {{ form_widget(form.IdMatiere, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="mb-3" >
            {{ form_label(form.chapterNumber, 'Modifier le Numero de Chapitre') }}
            {{ form_widget(form.chapterNumber, { 'attr': {'class': 'form-control'} }) }}
            <div class="invalid-feedback d-block text-danger ">
                {{ form_errors(form.chapterNumber) }} {# Display validation errors #}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.classe, 'Select Class') }}
            {{ form_widget(form.classe, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.pdfFile, 'Upload New PDF') }}
            {{ form_widget(form.pdfFile, { 'attr': {'class': 'form-control'} }) }}
        </div>

        {% if cour.pdfFilename %}
            <div class="mb-3">
                <p>Current PDF: <a href="{{ asset('uploads/pdfs/' ~ cour.pdfFilename) }}" target="_blank">View PDF</a></p>
            </div>
        {% endif %}

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="{{ path('app_cours_index') }}" class="btn btn-secondary ml-2">Cancel</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
