{% extends 'side-bar.html.twig' %}

{% block title %}Détails de la commande{% endblock %}

{% block body %}
<div class="container " style="margin-top: 100px !important; padding: 0 15px !important;">
    <h1 class="mb-4">Détails de la commande #{{ commande.id }}</h1>

    <p><strong>Date:</strong> {{ commande.dateCommande|date('d/m/Y') }}</p>
    <p><strong>Statut:</strong> {{ commande.statut }}</p>

    <h3>Produits commandés</h3>
    <ul>
        {% for commandeProduit in commande.commandeProduits %}
            <li>
                {{ commandeProduit.produit.nom }} -
                {{ commandeProduit.produit.prix }} dt (Quantité: {{ commandeProduit.quantite }})
            </li>
        {% endfor %}
    </ul>

    {% if commande.statut != 'Prêt' %}
        <form method="post" action="{{ path('app_commande_marquer_prete', {'id': commande.id}) }}">
            <button type="submit">Marquer comme prêt</button>
        </form>
    {% else %}
        <p>Cette commande est déjà marquée comme prête.</p>
    {% endif %}

    <a href="{{ path('app_commande_admin') }}">Retour à la liste des commandes</a>
</div>
    {% endblock %}
