{% block form %}
    <div class="container">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'method': 'POST'}}) }}
        
        <div class="card shadow-sm p-4 mt-4">
            <div class="mb-3">
                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.titre, {
                    'attr': {
                        'class': 'form-control' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Entrez le titre du quiz'
                    }
                }) }}
                <div class="invalid-feedback d-block text-danger">
                    {{ form_errors(form.titre) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Entrez la description du quiz'
                    }
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.cours, 'Cours', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.cours, {
                    'attr': {
                        'class': 'form-control' ~ (form.cours.vars.errors|length > 0 ? ' is-invalid' : '')
                    }
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.cours) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.classe, 'Classe', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.classe, {
                    'attr': {
                        'class': 'form-control' ~ (form.classe.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Sélectionnez une classe'
                    }
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.classe) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.matiere, 'Matière', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.matiere, {
                    'attr': {
                        'class': 'form-control' ~ (form.matiere.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Sélectionnez une matière'
                    }
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.matiere) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.dateAjout, 'Date d\'ajout', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.dateAjout, {
                    'attr': {
                        'class': 'form-control' ~ (form.dateAjout.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'readonly': 'readonly'
                    }
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.dateAjout) }}
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('quiz_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
