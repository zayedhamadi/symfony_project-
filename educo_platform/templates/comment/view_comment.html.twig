{% extends 'base.html.twig' %}

{% block title %}Comments for {{ course.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Comments for {{ course.name }}</h1>

        {% if comments|length > 0 %}
            <div class="comments-list">
                {% for comment in comments %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text">{{ comment.content }}</p>
                            <p class="text-muted">
                                <strong>Anonymous</strong> on {{ comment.createdAt|date('Y-m-d H:i') }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No comments yet.</p>
        {% endif %}

        <a href="{{ path('student_courses') }}" class="btn btn-secondary mt-3">Back to Courses</a>
    </div>
{% endblock %}