{% extends 'side-bar.html.twig' %}

{% block title %}Liste des réclamations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Date de création</th>
                <th scope="col">Statut</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for reclamation in reclamations %}
                <tr class="table-primary">
                    <td>{{ reclamation.titre }}</td>
                    <td>{{ reclamation.description }}</td>
                    <td>{{ reclamation.dateDeCreation|date('d/m/Y') }}</td>
                    <td>{{ reclamation.statut.label() }}</td>
                    <td>
                        <a href="{{ path('modifier_reclamation', {id: reclamation.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                    <td>
                        <a href="{{ path('supprimer_reclamation', {id: reclamation.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}