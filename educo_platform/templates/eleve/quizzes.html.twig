{% extends 'side-bar.html.twig' %}

{% block title %}Mes Quiz{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Mes Quiz</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <th scope="row">{{ quiz.id }}</th>
                    <td>{{ quiz.titre }}</td>
                    <td>{{ quiz.description }}</td>
                    <td>
                        <a href="{{ path('quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('eleve_quiz_start', {'id': quiz.id}) }}" class="btn btn-success btn-sm">DÃ©marrer</a> <!-- Assuming you have a route to start the quiz -->
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun quiz disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
