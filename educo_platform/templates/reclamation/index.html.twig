{% extends 'side-bar.html.twig' %}

{% block title %}Liste des réclamations{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px !important; padding: 0 15px !important;">
        <h1 class="mb-4">Liste des Réclamations</h1>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date de création</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.titre }}</td>
                        <td>{{ reclamation.description }}</td>
                        <td>{{ reclamation.dateDeCreation|date('d/m/Y') }}</td>
                        <td>{{ reclamation.statut.label() }}</td>
                        <td>
                            <span style="display: flex; gap: 10px;">
                                <a href="{{ path('modifier_reclamation', {id: reclamation.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('supprimer_reclamation', {id: reclamation.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
    <i class="fas fa-trash"></i> Supprimer
</a>

                            </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune réclamation trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
